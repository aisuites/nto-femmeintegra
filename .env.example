# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment: 'dev' or 'prod'
# This controls which AWS URLs and CloudFront URLs are used
ENVIRONMENT=dev

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# SECURITY WARNING: Keep the secret key used in production secret!
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=troque-por-uma-chave-segura-gerada

# SECURITY WARNING: Don't run with debug turned on in production!
DJANGO_DEBUG=true

# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Comma-separated list of trusted origins for CSRF
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://femme_integra:femme_integra@localhost:5432/femme_integra

# Database connection pool max age (seconds)
DATABASE_CONN_MAX_AGE=60

# =============================================================================
# REDIS CACHE SETTINGS
# =============================================================================

# Redis connection string
# Format: redis://host:port/db_number
REDIS_URL=redis://127.0.0.1:6379/1

# =============================================================================
# AWS UPLOAD SETTINGS
# =============================================================================

# AWS Lambda Signed URL API (por ambiente)
AWS_SIGNED_URL_API_DEV=https://a5xel8q8ld.execute-api.us-east-1.amazonaws.com/dev/signed-url
AWS_SIGNED_URL_API_PROD=https://a5xel8q8ld.execute-api.us-east-1.amazonaws.com/prod/signed-url

# CloudFront URLs (por ambiente)
CLOUDFRONT_URL_DEV=https://d3fdwvz6ilbr80.cloudfront.net
CLOUDFRONT_URL_PROD=https://d62ucrzqdbxhj.cloudfront.net

# =============================================================================
# EXTERNAL APIs
# =============================================================================

# Dynamsoft Web TWAIN License
DYNAMSOFT_LICENSE_KEY=sua-licenca-dynamsoft
